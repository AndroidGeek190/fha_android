<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlay_scrll"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:hint="Type Topic...."
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/edit_profile_line"
            android:textColor="@color/caldroid_black"
            android:id="@+id/txt_topic">

        </AutoCompleteTextView>
        <Spinner
            android:id="@+id/chatDate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:prompt="@string/select"
            android:background="@drawable/dpdn"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:gravity="left|center_vertical"
            android:textColor="#bdbdbd"
            android:textSize="16dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="Start Date"
            android:editable="false"
            android:textColor="@color/caldroid_black"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/edit_profile_line"
            android:paddingLeft="5dp"
            android:id="@+id/startDt"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Length of time"
            android:textColor="@color/caldroid_black"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="1dp"
            android:id="@+id/spinner_min"
            android:prompt="@string/select"
            android:background="@drawable/dpdn"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txtbooking_group_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_lnthtime"
            android:layout_marginTop="20dp"
            android:paddingLeft="4dp"
            android:textColor="@color/caldroid_black"
            android:text="@string/lbl_time"
            android:textSize="15sp" />
        <LinearLayout
            android:id="@+id/ll_updatebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtbooking_group_chat"

            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/coaches_videocall_continue_btn1"
                android:text="Update"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

</LinearLayout>
</ScrollView>
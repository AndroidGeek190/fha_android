<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlay_scrll"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"

    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/mainrl_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:padding="5dp"
                android:background="@color/primary"
                android:layout_height="50dp"
                android:id="@+id/linear_back"
                android:orientation="horizontal" >


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/actionbar_back_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/back_iv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Booking Form"
                    android:layout_gravity="center_vertical"
                    android:textSize="21sp"

                    android:textColor="@android:color/white"
                    android:gravity="fill_vertical"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/actionbar_logo"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/logo"
                tools:ignore="RtlCompat" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/all_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/image_alltxt"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/coaches_details_profilephoto_bg"
                android:layout_marginTop="10dp" >

                <com.erginus.fithealthy.commons.CircularImageView
                    android:id="@+id/img_icon_book"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/inputweight_profilephoto"
                    android:src="@null" />

                <LinearLayout
                    android:id="@+id/ll_img_qstn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/img_icon_book"
                    android:orientation="vertical"
                    android:paddingBottom="10dp" >

                    <LinearLayout
                        android:id="@+id/ll_tkntxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="5dp" >

                        <RelativeLayout
                            android:id="@+id/ll123"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="left"
                            android:orientation="vertical" >
                            <TextView
                                android:id="@+id/txtvw_fst_coachename_book"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Richard Brandson"
                                android:textColor="#6f6968"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/img_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txtvw_splztn_descptn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top|left"
                            android:paddingRight="5dp"
                            android:paddingTop="4dp"
                            android:maxLines="4"

                            android:text="Specialist in weight gain,exercise for women and traning for weight gainnnn....Specialist in weight gain,exercise for women and traning for weight gainnnn....Specialist in weight gain,exercise for women and traning for weight gainnnn kfjgsdfj.sfoutlhert....."
                            android:textColor="#868686"
                            android:textSize="12sp" />

                        <!-- <ImageView
                            android:id="@+id/bckarrwimage"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/back_arrow" /> -->
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="5dp" >

            <TextView
                android:id="@+id/txt_topicdcs"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Topic to discuss"
                android:textColor="#6f6968"
                android:textSize="12sp"
                android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinerDate"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="1dp"

                    android:background="@drawable/dropdown"
                     />


               <!-- <EditText
                    android:id="@+id/edt_slct_topic"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:drawableRight="@drawable/coaches_videocall_dropdown_icon"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:text="Select Topic"
                    android:textColorHint="#bdbdbd"
                    android:textColor="#bdbdbd"
                    android:textSize="14dp"
                    android:editable="false" />
-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bookingdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:paddingBottom="5dp" >

            <TextView
                android:id="@+id/txt_bkngdate"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Date for booking"
                android:textColor="#6f6968"
                android:textSize="12sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rl_selectDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 >

                <TextView
                    android:id="@+id/date_booking"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:drawableBottom="@drawable/edit_profile_line"

                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:text="Select available dates..."
                    android:textColorHint="#bdbdbd"
                    android:textColor="@color/caldroid_black"

                    android:textSize="14sp"
                    android:drawableRight="@drawable/coaches_videocall_dropdown_icon"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_lnthtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:paddingBottom="5dp" >

            <TextView
                android:id="@+id/txt_lnthtime"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Length of time"
                android:textColor="#6f6968"
                android:textSize="12sp"
                android:textStyle="bold" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="1dp"

                android:background="@drawable/dropdown"
                android:id="@+id/spinner" />
        </LinearLayout>


        <TextView
            android:id="@+id/txtbooking_group_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_lnthtime"
            android:layout_marginTop="8dp"
            android:paddingLeft="14dp"
            android:paddingRight="10dp"
            android:text="@string/lbl_time"
            android:textSize="15sp" />
        <LinearLayout
            android:id="@+id/ll_updatebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtbooking_group_chat"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <Button
                android:id="@+id/btn_contnu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/coaches_videocall_continue_btn1"
                android:text="Continue"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
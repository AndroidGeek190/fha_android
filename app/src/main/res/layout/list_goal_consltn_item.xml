        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ll_img_qstn"
        android:layout_marginTop="10dp"
        android:paddingRight="5dp"
        android:src="@drawable/g" />
-->
</RelativeLayout>
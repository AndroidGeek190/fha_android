<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coach_Login"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
android:background="@android:color/white"
    tools:context="com.erginus.fithealthy.CoachLoginActivity">

        <RelativeLayout
            android:id="@+id/ll_coach_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:padding="5dp"
                android:background="@color/primary"
                android:layout_height="50dp"
                android:id="@+id/linear_back"
                android:orientation="horizontal" >


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/actionbar_back_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/back_iv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Coach Login"
                    android:layout_gravity="center_vertical"
                    android:textSize="21sp"

                    android:textColor="@android:color/white"
                    android:gravity="fill_vertical"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/actionbar_logo"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/logo"
                tools:ignore="RtlCompat" />

        </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="120dp"
    android:gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/ll_edittext_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:gravity="center"

            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <EditText
                android:id="@+id/editText_mail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:imeOptions="actionNext"
                android:drawableLeft="@drawable/signin_email_icon"
                android:ems="10"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="User Id"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#757575"
                android:drawableBottom="@drawable/edit_profile_line"
                android:background="@android:color/transparent"
                android:textColorHint="#bdbdbd"
                >

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edittext_psswrd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_edittext_mail"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"

            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <EditText
                android:id="@+id/edit_psswrd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawablePadding="10dp"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textSize="16sp"
                android:drawableLeft="@drawable/signin_password_icon"
                android:ems="10"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:drawableBottom="@drawable/edit_profile_line"
                android:hint="*******"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColorHint="#bdbdbd"
                android:paddingRight="10dp"
                android:textColor="#757575"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_textview_psrwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_edittext_psswrd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/textView_frgtpsswrd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"

                android:text="Forgot Password?"
                android:textColor="#757575"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bttn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textview_psrwd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/signin_button_background"

                android:text="Login"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bttn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_bttn_login"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <Button
                android:id="@+id/button_signup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/signup_button_background"

                android:text="Sign up"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
</LinearLayout>
        <!-- <LinearLayout
            android:id="@+id/imag_lllayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ImageView_arrow_plus"
                android:layout_width="@dimen/arrow_height_wlcom"
                android:layout_height="@dimen/arrow_height_wlcom"
                android:onClick="goTologinscreen"
                android:paddingLeft="@dimen/imv_padding_left"
                android:src="@drawable/arrow_left" />
        </LinearLayout> -->

    </RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlay_scrll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    tools:context="com.erginus.fithealthy.ForgotPasswordActivity">

    <RelativeLayout
        android:id="@+id/mainrl_fgrt_psswrd"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <LinearLayout
            android:id="@+id/ll_textvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/welcomefh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image2_lay"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="Change Password"
                android:textColor="#BE2625"
                android:textSize="20sp" />

           </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edttxet_mailid_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_textvw"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <!--<EditText
                android:id="@+id/editText_currntPwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/signin_password_icon"
                android:ems="10"
                android:imeOptions="actionNext"
                android:textColorHint="#bdbdbd"
                android:textColor="#757575"
                android:gravity="center_vertical"
                android:hint="Current Password"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:drawableBottom="@drawable/edit_profile_line"
                android:background="@android:color/transparent"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp">
            </EditText>
            --><EditText
                android:id="@+id/editText_newPwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/signin_password_icon"
                android:ems="10"
                android:textColorHint="#bdbdbd"
                android:imeOptions="actionNext"
                android:textColor="#757575"
                android:gravity="center_vertical"
                android:hint="New Password"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@drawable/edit_profile_line"
                android:background="@android:color/transparent"
                android:paddingRight="10dp" >
            </EditText>

            <EditText
                android:id="@+id/editText_confrmPwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/signin_password_icon"
                android:ems="10"
                android:textColorHint="#bdbdbd"
                android:textColor="#757575"
                android:gravity="center_vertical"
                android:hint="Confirm Password"
                android:drawablePadding="10dp"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@drawable/edit_profile_line"
                android:background="@android:color/transparent"
                android:paddingRight="10dp" >
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_edttxet_mailid_forgot"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >

            <Button
                android:id="@+id/button_chngPwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/signin_button_background"
                android:text="Change"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>




<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@+id/drawer_layout"
                                        android:background="@android:color/white"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent" >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/rl_healthdiscussion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"

            >
            <RelativeLayout
                android:id="@+id/mainrl_buytoken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:id="@+id/txt_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_balncetoken_dsc"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/txt_disc"
                    android:textColor="#6f6968"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/ll_balncetoken"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/txt_discount"
                    android:layout_marginTop="15dp"
                    android:background="#F3F3F6"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:visibility="gone"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" >

                    <TextView
                        android:id="@+id/txt_blncetoken_reedem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Redeem -"
                        android:textColor="#6f6968"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_blncetoken_rdm_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txt_blncetoken_reedem"
                        android:paddingLeft="3dp"
                        android:text="420"
                        android:textColor="#6f6968"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_blncetoken_rdm_token"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txt_blncetoken_rdm_no"
                        android:paddingLeft="4dp"
                        android:text="FREE Tokens"
                        android:textColor="#6f6968"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_img_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_balncetoken"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_as_yougo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="10dp"
                        android:text="Pay As You Go"
                        android:textColor="#6f6968"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ll_contacttypes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:id="@+id/rl1_videocall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left" >

                            <ImageView
                                android:id="@+id/imgvw_purple"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/buy_token_video" />

                            <LinearLayout
                                android:id="@+id/tokens_lay1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="false"
                                android:layout_centerVertical="false"
                                android:layout_marginTop="10dp"

                                android:gravity="center_vertical|center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/textView_token_ten"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:enabled="true"
                                    android:text="150"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView_frgtpsswrdnum_t"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:enabled="true"
                                    android:paddingLeft="3dp"
                                    android:text="Tokens"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/price_token_lyout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="false"
                                android:layout_below="@id/tokens_lay1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp" >

                                <LinearLayout
                                    android:id="@+id/euro_lytou"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/textView_frgtpswrd"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:enabled="true"
                                        android:text="Â£ "
                                        android:textColor="#ffffff"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/uorolayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/textView_ten_token_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:enabled="true"
                                        android:text="2.99"
                                        android:textColor="#ffffff"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl1_121chat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            >

                            <ImageView
                                android:id="@+id/imgvw_orange"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/buy_token_group_video" />

                            <LinearLayout
                                android:id="@+id/tokens_lay2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="false"
                                android:layout_centerVertical="false"
                                android:layout_marginTop="10dp"

                                android:gravity="center_vertical|center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/textView_twnt_token"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:enabled="true"
                                    android:text="300"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView_frgtpsswrdnum_thdr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:enabled="true"
                                    android:paddingLeft="3dp"
                                    android:text="Tokens"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/euro_main_rltiv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="false"
                                android:layout_below="@id/tokens_lay2"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp" >

                                <LinearLayout
                                    android:id="@+id/euro_sec"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/textView_frgtpsswrd"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:enabled="true"
                                        android:text="Â£ "
                                        android:textColor="#ffffff"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/euro_thrd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/textView_twnty_token_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:enabled="true"
                                        android:text="5.99"
                                        android:textColor="#ffffff"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl1_grp_chat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right" >

                            <ImageView
                                android:id="@+id/imgvw_blue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/buy_token_chat" />

                            <LinearLayout
                                android:id="@+id/tokens_lay3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="false"
                                android:layout_centerVertical="false"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal|center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/textView_ffty_token"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:enabled="true"
                                    android:text="600"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView_frgtpsswrdnum_tenhdr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:enabled="true"
                                    android:paddingLeft="3dp"
                                    android:text="Tokens"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/euro_my_relative"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tokens_lay3"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="false"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp" >

                                <LinearLayout
                                    android:id="@+id/myeuro_lay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/textView_frgt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:enabled="true"
                                        android:text="Â£ "
                                        android:textColor="#ffffff"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/euro_price_lyout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/textView_ffty_token_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:enabled="true"

                                        android:text="11.99"
                                        android:textColor="#ffffff"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_img_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_img_txt"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp" />

                <LinearLayout
                    android:id="@+id/ll_balncetoken_dsc"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buy_token_tital_bg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <RelativeLayout
                        android:id="@+id/rl_layot_threetxe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp" >

                        <TextView
                            android:id="@+id/txt_blncetoken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance:"
                            android:textColor="#6f6968"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_blncetoken_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt_blncetoken"
                            android:paddingLeft="2dp"
                            android:text="0"
                            android:textColor="#6f6968"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_blncetoken_token"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt_blncetoken_no"
                            android:paddingLeft="4dp"
                            android:text="Tokens"
                            android:textColor="#6f6968"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_blncetoken_dscrptn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginLeft="2dp"
                        android:text="Here you can select the token package you want to buy for example,some call may cost 10 token per minute.You can specify when booking,how many minutes you want to call or chat.The token will then subcrated from your total amount"
                        android:textColor="#868686"

                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/mainrl_buytoken"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:paddingRight="8dp"
                android:text="@string/lbl_time"
                android:textColor="#6f6968"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_internet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtLabel"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/txt_internet"
                android:textColor="#6f6968"
                android:textSize="14sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:weightSum="1"
        android:clickable="true"
        android:background="@android:color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="140dp"
            android:background="@drawable/nav_cell_bg"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"/>
            <com.erginus.fithealthy.commons.CircularImageView
                android:id="@+id/ivwLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="1dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/inputweight_profilephoto" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Richard Brandson"
                    android:textColor="@android:color/white"
                    android:id="@+id/usrName"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="abc@gmail.com"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:id="@+id/userEmail"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listview_drawer"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:layout_weight="1"
            />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>


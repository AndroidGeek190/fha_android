<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.erginus.fithealthy.EditProfileActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/qustn"
        android:hint="Question"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/profilePic"
        android:drawableBottom="@drawable/edit_profile_line"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/descc"
        android:hint="Question Description"
        android:gravity="top"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:imeOptions="actionDone"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/transparent"
        android:drawableBottom="@drawable/edit_profile_line"

        android:layout_below="@+id/qustn"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="ASK"
        android:id="@+id/btn_ask"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:background="@drawable/signin_button_background"
        android:layout_below="@+id/descc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
</RelativeLayout>
